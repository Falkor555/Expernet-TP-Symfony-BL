{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container-fluid px-3 py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Bienvenue</h1>
            {# <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu">
                <i class="bi bi-list fs-4"></i>
            </button> #}
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-8 text-center">
                <p class="lead">Bienvenue à la Pâtisserie Ancelly</p>
                
                {% if app.user %}
                    <p>Bonjour {{ app.user.prenom }} {{ app.user.nom }} !</p>
                    <a href="{{ path('app_catalogue') }}" class="btn btn-danger rounded-pill px-4 py-2">
                        <i class="bi bi-shop"></i> Voir le catalogue
                    </a>
                {% else %}
                    <div class="mt-4">
                        <a href="{{ path('app_login') }}" class="btn btn-danger rounded-pill px-4 py-2 me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Se connecter
                        </a>
                        <a href="{{ path('app_utilisateur_new') }}" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                            <i class="bi bi-person-plus"></i> S'inscrire
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}