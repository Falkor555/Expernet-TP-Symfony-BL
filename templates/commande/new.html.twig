{% extends 'base.html.twig' %}

{% block title %}Nouvelle Commande{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/commande.css') }}">
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="page-header">
        <h1><i class="bi bi-cart-check"></i> Créer une nouvelle commande</h1>
    </div>

    <div class="auth-container">
        <div class="auth-card">
            {{ include('commande/_form.html.twig') }}
            
            <div class="text-center mt-4">
                <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/commande-validation.js') }}"></script>
{% endblock %}
