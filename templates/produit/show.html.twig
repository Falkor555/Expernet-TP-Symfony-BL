{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('produit') }}
{% endblock %}

{% block body %}
<div class="produit-simple-container">
    <!-- Bouton retour -->
    <div class="produit-header-simple">
        <button class="btn-back-simple" onclick="window.history.back();">
            <i class="bi bi-arrow-left"></i>
        </button>
    </div>

    <!-- Image du produit -->
    <div class="produit-image-wrapper-simple">
        <div class="produit-image-placeholder-simple">
            ðŸŽ‚
        </div>
    </div>

    <!-- Contenu -->
    <div class="produit-content-simple">
        <!-- Titre et Prix -->
        <div class="produit-title-row-simple">
            <h1 class="produit-title-simple">{{ produit.nom }}</h1>
            <span class="produit-price-simple">{{ produit.prix }}â‚¬</span>
        </div>

        <!-- Description -->
        <p class="produit-description-simple">
            {{ produit.description }}
        </p>
    </div>

    <!-- Footer avec bouton -->
    <div class="produit-footer-simple">
        <div class="total-price-simple">
            <p class="total-label-simple">Total price</p>
            <p class="total-value-simple">{{ produit.prix }}â‚¬</p>
        </div>
        {% if is_granted('ROLE_CLIENT') %}
        <form method="post" action="{{ path('app_panier_add', {'id': produit.id}) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('panier_add') }}">
            <button type="submit" class="btn-add-cart-simple">
                Ajouter au panier
            </button>
        </form>
        {% else %}
        <button class="btn-add-cart-simple" onclick="alert('Veuillez vous connecter')">
            Ajouter au panier
        </button>
        {% endif %}
    </div>
</div>
{% endblock %}
