{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>DateCreation</th>
                <td>{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ produit.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
    {% endif %}

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
