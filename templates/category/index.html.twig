{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <div class="container-fluid px-3 py-4">
        {# Header avec bouton menu #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Catalogue</h1>
            <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu">
                <i class="bi bi-list fs-4"></i>
            </button>
        </div>

        {# Onglets de navigation - Liste des catégories #}
        <ul class="nav nav-tabs border-0 mb-4">
            {% for category in categories %}
                <li class="nav-item">
                    <a class="nav-link border-0 border-bottom border-3 text-dark"
                       href="{{ path('app_category_show', {'id': category.id}) }}">
                        {{ category.nom }}
                    </a>
                </li>
            {% else %}
                <li class="nav-item">
                    <span class="nav-link text-muted">Aucune catégorie</span>
                </li>
            {% endfor %}
        </ul>

        {# Message si aucune catégorie #}
        {% if categories is empty %}
            <div class="alert alert-info">
                Aucune catégorie disponible pour le moment.
            </div>
        {% endif %}

        {# Section d'administration (visible uniquement pour les gérants) #}
        <div class="mt-5 pt-4 border-top">
            <h3>Gérant</h3>
            <div class="d-flex gap-2 flex-wrap mt-3">
                <a href="{{ path('app_category_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Créer une nouvelle catégorie
                </a>
            </div>
        </div>
    </div>
{% endblock %}
