{% extends 'base.html.twig' %}

{% block title %}{{ category.nom }}{% endblock %}

{% block body %}
    <div class="container-fluid px-3 py-4">
        {# Header avec bouton retour #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_category_index') }}" class="btn btn-link text-dark p-0">
                <i class="bi bi-arrow-left fs-4"></i>
            </a>
            <button class="btn btn-link text-dark p-0" type="button">
                <i class="bi bi-list fs-4"></i>
            </button>
        </div>

        {# Titre de la page #}
        <h1 class="mb-4">{{ category.nom }}</h1>

        {# Grille de produits #}
        <div class="row g-3">
            {% for produit in category.produits %}
            <div class="col-6">
                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm h-100">
                        <img src="https://via.placeholder.com/300x200" class="card-img-top rounded-top" alt="{{ produit.nom }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2 text-dark">{{ produit.nom }}</h5>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <span class="text-danger fw-bold">{{ produit.prix }}€</span>
                                <button class="btn btn-danger rounded-circle p-2" type="button" onclick="event.preventDefault(); event.stopPropagation();">
                                    <i class="bi bi-plus fs-5"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    Aucun produit disponible dans cette catégorie.
                </div>
            </div>
            {% endfor %}
        </div>

        {# Section d'administration (visible uniquement par les gérants de la pâtisserie) #}
        <div class="mt-5 pt-4 border-top">
            <h3>Administration</h3>
            <div class="d-flex gap-2 flex-wrap mt-3">
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <a href="{{ path('app_produit_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Ajouter un produit
                </a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
