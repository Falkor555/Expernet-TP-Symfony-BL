{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="container-fluid px-3 py-4">
        <div class="mb-4">
            <h1><i class="bi bi-speedometer2"></i> Mon Profil</h1>
        </div>

        {# Informations utilisateur #}
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-person"></i> Mes informations</h5>
                        <p class="mb-1"><strong>Nom :</strong> {{ utilisateur.nom }}</p>
                        <p class="mb-1"><strong>Prénom :</strong> {{ utilisateur.prenom }}</p>
                        <p class="mb-1"><strong>Email :</strong> {{ utilisateur.adresseMail }}</p>
                        <p class="mb-1"><strong>Téléphone :</strong> {{ utilisateur.phoneNumber }}</p>
                        
                        {% if utilisateur == app.user or is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-sm btn-danger mt-3">
                                <i class="bi bi-pencil"></i> Modifier mon profil
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-cart-check"></i> Mes commandes</h5>
                        
                        {% if commandes is empty %}
                            <p class="text-muted">Vous n'avez pas encore passé de commande.</p>
                            <a href="{{ path('app_catalogue') }}" class="btn btn-danger">
                                <i class="bi bi-shop"></i> Découvrir le catalogue
                            </a>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>N° Commande</th>
                                            <th>Date</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for commande in commandes %}
                                            <tr>
                                                <td>#{{ commande.id }}</td>
                                                <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                                                <td>
                                                    <span class="badge bg-info">{{ commande.statut }}</span>
                                                </td>
                                                <td>
                                                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-eye"></i> Voir
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Actions rapides #}
        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_catalogue') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-shop fs-2 text-danger"></i>
                            <h5 class="mt-3">Catalogue</h5>
                            <p class="text-muted">Découvrir nos produits</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_panier_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-cart fs-2 text-warning"></i>
                            <h5 class="mt-3">Mon panier</h5>
                            <p class="text-muted">Voir mon panier</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_commande_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-cart-check fs-2 text-success"></i>
                            <h5 class="mt-3">Mes commandes</h5>
                            <p class="text-muted">Historique de mes commandes</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="mt-3">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            {% else %}
                <a href="{{ path('app_home') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à l'accueil
                </a>
            {% endif %}
        </div>
    </div>

    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }
    </style>
{% endblock %}