{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <div class="container-fluid px-3 py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_catalogue') }}" class="btn btn-link text-dark p-0">
                <i class="bi bi-arrow-left fs-4"></i>
            </a>
            <button class="btn btn-link text-dark p-0" type="button">
                <i class="bi bi-list fs-4"></i>
            </button>
        </div>

        <h1 class="mb-4">Mon Panier</h1>

        <div class="row g-3">
            {% if panier is not empty %}
                {% for item in panier %}
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-3">
                                    <img src="https://via.placeholder.com/100x100" class="img-fluid rounded" alt="{{ item.produit.nom }}">
                                </div>
                                <div class="col-6">
                                    <h6 class="mb-1">{{ item.produit.nom }}</h6>
                                    <p class="text-muted small mb-2">{{ item.produit.prix }}€ l'unité</p>
                                    <div class="d-flex align-items-center gap-2">
                                        <button class="btn btn-sm btn-outline-secondary" onclick="updateQuantity({{ item.produit.id }}, -1)">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <span class="fw-bold">{{ item.quantite }}</span>
                                        <button class="btn btn-sm btn-outline-secondary" onclick="updateQuantity({{ item.produit.id }}, 1)">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-3 text-end">
                                    <p class="fw-bold text-danger mb-2">{{ (item.produit.prix * item.quantite)|number_format(2, ',', ' ') }}€</p>
                                    <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart({{ item.produit.id }})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

                <div class="col-12 mt-4">
                    <div class="card border-0 shadow-sm bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sous-total</span>
                                <span>{{ total|number_format(2, ',', ' ') }}€</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Livraison</span>
                                <span>Gratuit</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold fs-5">
                                <span>Total</span>
                                <span class="text-danger">{{ total|number_format(2, ',', ' ') }}€</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-3">
                    <a href="{{ path('app_commande_new') }}" class="btn btn-danger w-100 py-3 rounded-pill">
                        <i class="bi bi-check-circle"></i> Valider la commande
                    </a>
                    <a href="{{ path('app_catalogue') }}" class="btn btn-outline-secondary w-100 mt-2 py-2 rounded-pill">
                        <i class="bi bi-arrow-left"></i> Continuer mes achats
                    </a>
                    <button class="btn btn-outline-danger w-100 mt-2 py-2 rounded-pill" onclick="clearCart()">
                        <i class="bi bi-trash"></i> Vider le panier
                    </button>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center py-5">
                        <i class="bi bi-cart-x fs-1 d-block mb-3"></i>
                        <h5>Votre panier est vide</h5>
                        <p class="mb-3">Ajoutez des produits pour commencer votre commande</p>
                        <a href="{{ path('app_catalogue') }}" class="btn btn-danger rounded-pill px-4">
                            <i class="bi bi-shop"></i> Découvrir nos produits
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <script>
        function updateQuantity(produitId, change) {
            window.location.href = '{{ path('app_panier_update', {'id': '__ID__', 'change': '__CHANGE__'}) }}'
                .replace('__ID__', produitId)
                .replace('__CHANGE__', change);
        }

        function removeFromCart(produitId) {
            if (confirm('Voulez-vous vraiment retirer ce produit du panier ?')) {
                window.location.href = '{{ path('app_panier_remove', {'id': '__ID__'}) }}'.replace('__ID__', produitId);
            }
        }

        function clearCart() {
            if (confirm('Voulez-vous vraiment vider votre panier ?')) {
                window.location.href = '{{ path('app_panier_clear') }}';
            }
        }
    </script>
{% endblock %}
