{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
    <div class="container-fluid px-3 py-4">
        <div class="mb-4">
            <h1><i class="bi bi-speedometer2"></i> Tableau de bord Admin</h1>
        </div>

        {# Statistiques #}
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-box-seam fs-1 text-danger"></i>
                        <h3 class="mt-2">{{ stats.total_produits }}</h3>
                        <p class="text-muted mb-0">Produits</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle fs-1 text-success"></i>
                        <h3 class="mt-2">{{ stats.produits_actifs }}</h3>
                        <p class="text-muted mb-0">Produits actifs</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-cart-check fs-1 text-primary"></i>
                        <h3 class="mt-2">{{ stats.total_commandes }}</h3>
                        <p class="text-muted mb-0">Commandes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people fs-1 text-info"></i>
                        <h3 class="mt-2">{{ stats.total_utilisateurs }}</h3>
                        <p class="text-muted mb-0">Utilisateurs</p>
                    </div>
                </div>
            </div>
        </div>

        {# Menu de gestion #}
        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_produit_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-box-seam fs-2 text-danger"></i>
                            <h5 class="mt-3">Gérer les produits</h5>
                            <p class="text-muted">Ajouter, modifier ou supprimer des produits</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_category_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-tags fs-2 text-warning"></i>
                            <h5 class="mt-3">Gérer les catégories</h5>
                            <p class="text-muted">Organiser les catégories de produits</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_tag_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-tag fs-2 text-info"></i>
                            <h5 class="mt-3">Gérer les tags</h5>
                            <p class="text-muted">Ajouter ou modifier des tags</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_commande_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-cart-check fs-2 text-primary"></i>
                            <h5 class="mt-3">Voir les commandes</h5>
                            <p class="text-muted">Consulter toutes les commandes</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_utilisateur_index') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-people fs-2 text-success"></i>
                            <h5 class="mt-3">Voir les utilisateurs</h5>
                            <p class="text-muted">Gérer les comptes utilisateurs</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="{{ path('app_catalogue') }}" class="text-decoration-none">
                    <div class="card border-0 shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-shop fs-2 text-secondary"></i>
                            <h5 class="mt-3">Voir le catalogue</h5>
                            <p class="text-muted">Vue publique du catalogue</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }
    </style>
{% endblock %}